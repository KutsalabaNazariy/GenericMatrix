@Override
public void fillMatrixInteger(Double firstNum) {
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if(firstNum % 5 == 0) {
                firstNum = -1 * (firstNum/5);
                matrix.get(i).set(j, firstNum);
            }
            else {
                matrix.get(i).set(j, firstNum + 1);
                firstNum += 7;
            }
        }
    }
}